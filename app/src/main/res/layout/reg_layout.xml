<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@drawable/background"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/sign"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText12"
        android:ems="10"
        android:background="@drawable/rounded_edittext"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="23sp"
        android:textColor="#333333"
        android:drawablePadding="25dp"
        android:hint="Enter email"
        android:paddingTop="5dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/icon_mail"
        android:layout_below="@+id/imageView"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/editText12"
        android:background="#CCCCCC"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText22"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/cc"
        android:layout_below="@+id/editText12"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="23sp"
        android:textColor="#333333"
        android:drawablePadding="25dp"
        android:hint="Enter password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="20dp"
        android:drawableStart="@drawable/icon_pass" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/editText22"
        android:background="#CCCCCC"></View>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText32"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/rounded_edittextbottom"
        android:layout_below="@+id/editText22"
        android:textSize="23sp"
        android:textColor="#333333"
        android:cursorVisible="true"
        android:drawablePadding="25dp"
        android:hint="Retype password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="20dp"
        android:drawableStart="@drawable/icon_pass"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:background="@drawable/rounded_button1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="regis"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editText32"
        android:text="Register"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/rounded_button2"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="login"
        android:layout_below="@+id/button1"
        android:text="Login"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="#FFFFFF"
        android:text="♥ Designed With Love ♥"
        android:layout_below="@+id/button2"

        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:textColor="#FFFFFF"
        android:text="UI Design by SatyaJit" />


</RelativeLayout>
